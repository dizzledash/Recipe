<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="horizontal"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/ic_action_case_light">

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/nav_List_item_icon"
        android:padding="12dp"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/nav_List_item_title"
        android:layout_toRightOf="@+id/nav_List_item_icon"
        android:layout_toEndOf="@+id/nav_List_item_icon"
        android:layout_centerVertical="true"
        android:layout_centerHorizontal="true"
        android:textSize="17sp"
        android:fontFamily="sans-serif-medium"
        android:padding="12dp"/>

</RelativeLayout>